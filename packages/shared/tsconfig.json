    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "outDir": "./types",
  },
  "include": ["**/*.ts"]
}
